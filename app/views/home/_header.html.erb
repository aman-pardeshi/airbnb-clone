<header data-controller="header" class="border-b-2">
  <nav class="flex justify-between py-4 items-center sm:px-36 px-2" >
    <div class="pr-10">
      <%= link_to root_path do %>
        <%= render "svg/logo" %>
      <% end %>
    </div>

    <div class="border-2 rounded-3xl py-2 px-4 hover:shadow-md cursor-pointer transition-all shadow-sm flex text-sm items-center gap-2">
      <div class="px-2"> Anywhere </div> <span class="text-gray-400">|</span>
      <div class="px-2"> Any week </div> <span class="text-gray-400">|</span>
      <div class="px-2 text-gray-500"> Add guests</div> 
      <div class="px-2 py-2 bg-primary-color text-white rounded-2xl"><%= render "svg/search-icon" %></div>
    </div>

    <div class="flex items-center">
      <div class="cursor-pointer rounded-3xl hover:bg-gray-200 px-4 py-3" >
        Become a host
      </div>

      <div class="cursor-pointer rounded-3xl hover:bg-gray-200 px-3 py-3 mr-2">
        <%= render "svg/globe" %>
      </div>

      <div class="flex-shrink-0 relative px-3 border-2 rounded-3xl p-1 hover:shadow-md cursor-pointer">
        <div>
          <button class="h-8 flex items-center gap-2" data-header-target="openUserMenu" id="dropdown-button">
            <%= render "svg/menu-icon" %>
            <%= render "svg/user-icon" %>
          </button>
        </div>
        
        <div 
          class="hidden origin-top-right absolute text-sm right-0 mt-4 w-48 rounded-lg shadow-md ring-1 ring-black ring-opacity-5 bg-white" 
          data-transition-enter="transition ease-out duration-100"
          data-transition-enter-start="transform opacity-0 scale-95"
          data-transition-enter-end="transform opacity-100 scale-100"
          data-transition-leave="transition ease-in duration-75"
          data-transition-leave-start="transform opacity-100 scale-100"
          data-transition-leave-end="transform opacity-0 scale-95"
          id="dropdown-menu"
        > 
          <div class="py-2 px-1">
            <div class="py-2 px-4 text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1" id="user-menu-item-0">Sign up</div>
            <div class="py-2 px-4 text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1" id="user-menu-item-1">Log in</div>
            <hr>
            <div class="py-2 px-4 text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1" id="user-menu-item-2">Host your home</div>
            <div class="py-2 px-4 text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1" id="user-menu-item-3">Host an experience</div>
            <div class="py-2 px-4 text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1" id="user-menu-item-4">Help</div>
          </div>
        </div>
      </div>
    </div>
</header> 